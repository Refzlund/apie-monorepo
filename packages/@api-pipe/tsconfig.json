{
	"extends": "ts-configs/tsconfig.def.json",
	"compilerOptions": {
		/* Paths */
		"baseUrl": ".",
		"rootDir": "./src",
		"paths": {
			// Library
			"@api/pipe": ["./dist"],
			"@api/pipe/*": ["./dist/*"],

			// ...
			"$": ["./src"],
			"$/*": ["./src/*"],

			"$types": ["src/types"],
			"$types/*": ["src/types/*"]
		}
	},
	"include": ["src", "tests"],
	"exclude": ["dist"]
}