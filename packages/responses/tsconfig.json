{
	"extends": "ts-configs/tsconfig.def.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			// Library
			"@apie/responses": ["./src/index.ts"],
			"@apie/responses/*": ["./src/*"],

			// ...
			"$": ["./src"],
			"$/*": ["./src/*"],

			"$types": ["./src/types"],
			"$types/*": ["./src/types/*"],
		}
	}
}
