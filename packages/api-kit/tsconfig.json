{
	"extends": "ts-configs/tsconfig.def.json",
	"compilerOptions": {

		/* Paths */
		"baseUrl": ".",
		"paths": {
			// Library
			"api-kit": ["./.dist"],
			"api-kit/*": ["./.dist/*"],
			// ...
			"$": ["./src"],
			"$/*": ["./src/*"],

			"$types": ["./types"],
			"$types/*": ["./types/*"]
		}
		
	},
	"include": [
		"src",
		"types",
		".dist"
	],
}