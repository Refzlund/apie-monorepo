{
	"name": "api-kit-monorepo",
	"version": "0.0.0",
	"description": "A monorepo for api-kit.",
	"private": true,
	"type": "module",
	"workspaces": [
		"configs/*",
		"packages/*"
	],
	"scripts": {
		"lint": "eslint ./**/*.{js,ts,cjs} --ignore-pattern 'dist/*'",
		"typecheck": "pnpm --stream -r typecheck",
		"test": "pnpm --stream -r test",
		"precommit": "bun lint && bun typecheck && bun test && bun package",
		"package": "pnpm -r package",
		"publish": "pnpm package && changeset publish"
	},
	"devDependencies": {
		"@changesets/cli": "^2.26.2",
		"@svitejs/changesets-changelog-github-compact": "^1.1.0",
		"@types/node": "20.4.2",
		"bun-types": "^1.0.21",
		"eslint": "^8.44.0",
		"eslint-configs": "workspace:*",
		"prettier": "^3.0.0",
		"ts-configs": "workspace:*",
		"typescript": "^5.2.2",
		"vite": "^4.3.9",
		"vite-configs": "workspace:*",
		"vite-plugin-dts": "^3.1.0",
		"vite-tsconfig-paths": "^4.2.0",
		"vitest": "^1.2.2"
	},
	"packageManager": "pnpm@8.6.7",
	"engines": {
		"pnpm": "^8.0.0"
	}
}